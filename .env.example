# Application Settings
APP_NAME=SEO Analysis Platform
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database - PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=seo_db
POSTGRES_USER=seo_user
POSTGRES_PASSWORD=seo_password

# Neo4j Graph Database
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_password

# Elasticsearch
ELASTICSEARCH_HOST=elasticsearch:9200

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# JWT Authentication
JWT_SECRET_KEY=another-super-secret-jwt-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI/ML API Keys
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# SERP API (Optional - for keyword tracking)
SERP_API_KEY=your-serp-api-key-here

# Google Services (for Search Console Integration)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GSC_CREDENTIALS_FILE=/app/credentials/gsc-credentials.json

# Monitoring & Alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=alerts@yourdomain.com
EMAIL_PASSWORD=your-email-app-password
ENABLE_EMAIL_ALERTS=false
ENABLE_SLACK_ALERTS=false

# Third-party SEO APIs (Optional)
AHREFS_API_KEY=your-ahrefs-api-key  # For backlink data
SEMRUSH_API_KEY=your-semrush-api-key  # For keyword data

# Frontend (با Nginx reverse proxy)
NEXT_PUBLIC_API_URL=http://localhost/api

# Crawler Settings
CRAWLER_USER_AGENT=SEO-Analyzer-Bot/1.0
CRAWLER_MAX_DEPTH=10
CRAWLER_DELAY_MS=1000
CRAWLER_CONCURRENT_REQUESTS=10

# JavaScript Rendering (Playwright)
ENABLE_JS_RENDERING=true
PLAYWRIGHT_TIMEOUT=30000

# Lighthouse Settings
LIGHTHOUSE_ENABLED=true
LIGHTHOUSE_THROTTLING=simulated3G

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Super Admin Initialization (Change immediately after first run)
FIRST_SUPERUSER=syeeedalireza@yahoo.com
FIRST_SUPERUSER_PASSWORD=Shashpp7397
